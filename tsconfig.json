{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["es2018", "esnext"],
    "module": "CommonJS",
    "outDir": "build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017"
  },
  "exclude": ["node_modules"],
  "files": ["global.d.ts"],
  "include": ["src/**/*.ts"]
}
